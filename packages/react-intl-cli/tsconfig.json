{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        // Targeting node >= 8
        "target": "es2017",
        "outDir": "lib",
        "rootDir": "src",
        "module": "commonjs",
        "types": [
            "babel__core",
            "babel__generator",
            "babel__template",
            "babel__traverse",
            "benchmark",
            "chai",
            "estree",
            "fs-extra",
            "istanbul-lib-coverage",
            "istanbul-lib-report",
            "istanbul-reports",
            // Don't include mocha here
            "jest",
            "jest-diff",
            "node",
            "resolve",
            "stack-utils",
            "yargs"
        ],
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "babel-plugin-react-intl/*": ["../babel-plugin-react-intl/*"]
        },
        "sourceMap": true
    },
    "include": ["src/**/*.ts"]
}
